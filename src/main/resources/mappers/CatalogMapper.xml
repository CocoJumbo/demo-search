<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="igathlete.ilt.mapper.CatalogMapper">
    <select id="findAll" resultType="igathlete.ilt.model.Catalog">
        SELECT id, name, description FROM catalog
    </select>

    <select id="findById" parameterType="long" resultType="igathlete.ilt.model.Catalog">
        SELECT id, name, description FROM catalog WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="igathlete.ilt.model.Catalog" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO catalog (name, description)
        VALUES (#{name}, #{description})
    </insert>

    <update id="update" parameterType="map">
        UPDATE catalog
        SET name = #{catalog.name},
        description = #{catalog.description}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM catalog WHERE id = #{id}
    </delete>

    <select id="search" resultType="igathlete.ilt.model.Catalog">
        SELECT id, name, description
        FROM catalog
        <where>
            <if test="filter.ids != null and !filter.ids.isEmpty()">
                AND id IN
                <foreach collection="filter.ids" item="id" open="(" separator="," close=")">
                    #{id}
                </foreach>
            </if>
            <if test="filter.name != null and filter.name != ''">
                AND name LIKE CONCAT('%', #{filter.name}, '%')
            </if>
            <if test="filter.description != null and filter.description != ''">
                AND description LIKE CONCAT('%', #{filter.description}, '%')
            </if>
        </where>
    </select>
</mapper>